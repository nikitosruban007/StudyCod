<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane styleClass="root" stylesheets="@styles/HomeScene.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.fx.controllers.HomeSceneController">
    <left>
        <AnchorPane prefHeight="1080.0" prefWidth="1920.0" stylesheets="@styles/HomeScene.css" BorderPane.alignment="CENTER">
            <Label fx:id="welcome" layoutX="58.0" layoutY="208.0" prefHeight="82.0" prefWidth="1094.0" styleClass="label-main" />
            <ComboBox fx:id="langChoice" layoutX="1637.0" layoutY="62.0" onAction="#changeUiLanguage" prefHeight="40.0" prefWidth="150.0" styleClass="lang-choice" />
            <Button layoutX="1788.0" layoutY="59.0" onAction="#handleAuth" prefHeight="50.0" prefWidth="50.0" styleClass="icon-button">
                <graphic>
                    <ImageView fitHeight="45.0" fitWidth="45.0">
                        <image>
                            <Image url="@user.png" />
                        </image>
                    </ImageView>
                </graphic>
            </Button>
            <Button fx:id="tasksButton" layoutX="58.0" layoutY="59.0" onAction="#goToTasks" prefHeight="50.0" prefWidth="400.0" styleClass="nav-button" text="Завдання">
                <graphic>
                    <ImageView fitHeight="45.0" fitWidth="45.0">
                        <image>
                            <Image url="@tasks.png" />
                        </image>
                    </ImageView>
                </graphic>
            </Button>
            <Button fx:id="gradesButton" layoutX="470.0" layoutY="59.0" onAction="#goToGrades" prefHeight="50.0" prefWidth="354.0" styleClass="nav-button" text="Оцінки">
                <graphic>
                    <ImageView fitHeight="45.0" fitWidth="45.0">
                        <image>
                            <Image url="@grades.png" />
                        </image>
                    </ImageView>
                </graphic>
            </Button>
            <Label fx:id="advice" layoutX="58.0" layoutY="291.0" prefHeight="88.0" prefWidth="1822.0" styleClass="advice-label" />
            <Label fx:id="authorizate" layoutX="530.0" layoutY="971.0" prefHeight="82.0" prefWidth="850.0" styleClass="error-label" text="Для цього потрібно авторизуватися!" visible="false" />
        </AnchorPane>
    </left>
</BorderPane>