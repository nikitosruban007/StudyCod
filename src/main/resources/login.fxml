<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="336.0" prefWidth="290.0" styleClass="dialog-root" stylesheets="@styles/TaskScenes.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.fx.controllers.LoginController">
    <Label layoutX="72.0" layoutY="14.0" styleClass="dialog-title" text="Авторизація">
        <font>
            <Font name="JetBrains Mono Bold" size="22.0" />
        </font>
    </Label>
    <Label layoutX="53.0" layoutY="49.0" prefHeight="30.0" prefWidth="73.0" styleClass="input-label" text="Логін">
        <font>
            <Font name="JetBrains Mono" size="14.0" />
        </font>
    </Label>
    <TextField fx:id="login" layoutX="62.0" layoutY="75.0" prefHeight="38.0" prefWidth="166.0" styleClass="text-input" />
    <Label layoutX="55.0" layoutY="120.0" styleClass="input-label" text="Пароль">
        <font>
            <Font name="JetBrains Mono" size="14.0" />
        </font>
    </Label>
    <PasswordField fx:id="password" layoutX="61.0" layoutY="148.0" prefHeight="38.0" prefWidth="166.0" styleClass="text-input" />
    <Button layoutX="86.0" layoutY="230.0" onAction="#loginUser" prefHeight="50.0" prefWidth="118.0" styleClass="primary-button" text="Увійти">
        <font>
            <Font name="JetBrains Mono" size="12.0" />
        </font>
    </Button>
    <Label fx:id="regtext" layoutX="95.0" layoutY="290.0" onMouseClicked="#openRegisterDialog" styleClass="link-label" text="Нема аккаунту?">
        <font>
            <Font name="JetBrains Mono" size="12.0" />
        </font>
    </Label>
    <Label fx:id="correctly" layoutX="45.0" layoutY="281.0" styleClass="error-text" text="Не правильний логін чи пароль!" textFill="#dc0000" visible="false">
        <font>
            <Font name="JetBrains Mono" size="12.0" />
        </font>
    </Label>
</AnchorPane>
